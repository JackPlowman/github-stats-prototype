# ------------------------------------------------------------------------------
# Python
# ------------------------------------------------------------------------------

unit-test:
    poetry run pytest --cov=. --cov-report=xml

# ------------------------------------------------------------------------------
# Ruff
# ------------------------------------------------------------------------------

ruff-lint:
    ruff .

ruff-lint-fix:
    ruff --fix .

ruff-format:
    ruff format --check .

ruff-format-fix:
    ruff format .

# ------------------------------------------------------------------------------
# Other Python Tools
# ------------------------------------------------------------------------------

bandit:
    bandit -r .

vulture:
    vulture .
